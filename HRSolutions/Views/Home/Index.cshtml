@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model HRSolutions.Models.View

<style>
    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
        border-radius: 0.75rem;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        padding: 1rem 1.25rem;
    }

    .card-body {
        padding: 1rem 1.25rem;
    }

    .card-footer {
        background-color: #f8f9fa;
        padding: 0.75rem 1.25rem;
        border-top: 1px solid #dee2e6;
    }

    .announcement-item h6,
    .notice-item h6 {
        color: #0d6efd;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: ">";
    }
</style>

<main class="app-main">
    <div class="app-content-header py-3 mb-4 border-bottom bg-light">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h3 class="mb-0 fw-semibold">Admin Dashboard</h3>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-end mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="app-content">
        <div class="container-fluid">
            <div class="row g-4">
                <!-- Left Column -->
                <div class="col-lg-4">
                    <!-- Notice Board -->
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Notice Board</h5>
                            <a href="javascript:void(0);" class="text-decoration-underline text-primary">View Report</a>
                        </div>
                        <div class="card-body overflow-auto" style="max-height: 500px">
                            @if (Model.Notices != null && Model.Notices.Any())
                            {
                                @foreach (var notice in Model.Notices)
                                {
                                    <div class="mb-4 border-bottom pb-2 notice-item">
                                        <h6 class="fw-bold">@notice.Title</h6>
                                        <p class="mb-1">@Html.Raw(notice.Description)</p>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-person me-1"></i> @notice.Auther
                                        </small>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <p class="mb-0">No notices available at this time.</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Inbox -->
                    <div class="card mt-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Inbox</h5>
                            <a href="javascript:void(0);" class="text-decoration-underline text-primary">View Report</a>
                        </div>
                        <div class="card-body">
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum vel urna a justo bibendum tristique.</p>
                        </div>
                    </div>
                </div>

                <!-- Center Column -->
                <div class="col-lg-4">
                    <!-- Announcements -->
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Announcements</h5>
                            <a href="javascript:void(0);" class="text-decoration-underline text-primary">View Report</a>
                        </div>
                        <div class="card-body overflow-auto" style="max-height: 500px">
                            @if (Model.Announcements != null && Model.Announcements.Any())
                            {
                                @foreach (var announcement in Model.Announcements)
                                {
                                    <div class="mb-3 announcement-item">
                                        <h6 class="fw-bold mb-1">@announcement.announcementTitle</h6>
                                        <div>@Html.Raw(announcement.description)</div>
                                        <small class="text-muted d-block mt-1">
                                            <i class="bi bi-calendar-event me-1"></i> Announcement #@announcement.announcementId
                                        </small>
                                        <hr>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="bi bi-megaphone fs-1 text-muted mb-2"></i>
                                    <p class="mb-0">No announcements available at this time.</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Applications -->
                    <div class="card mt-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Applications</h5>
                            <a href="javascript:void(0);" class="text-decoration-underline text-primary">View Report</a>
                        </div>
                        <div class="card-body">
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum vel urna a justo bibendum tristique.</p>
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-lg-4">
                    <!-- Latest Members -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Latest Members</h5>
                            <span class="badge bg-danger">8 New Members</span>
                        </div>
                        <div class="card-body p-3">
                            <div class="row g-2 text-center">
                                @for (int i = 0; i < 8; i++)
                                {
                                    <div class="col-3">
                                        <img class="img-fluid rounded-circle mb-1" src="../../dist/assets/img/user@(i+1)-128x128.jpg" alt="User Image" />
                                        <a class="d-block text-truncate small fw-bold text-secondary" href="#">User @(i + 1)</a>
                                        <div class="small text-muted">Date</div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <a href="javascript:" class="text-decoration-underline text-primary">View All Users</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
