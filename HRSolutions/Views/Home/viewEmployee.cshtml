@{
    ViewData["Title"] = "Employee Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .profile-content {
        width: 80%;
        margin: 20px auto;
        background: white;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 5px;
    }

    .search-bar {
        display: flex;
        justify-content: space-between;
        background: #f0f0f0;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

        .search-bar input {
            width: 100%;
            padding: 5px;
            border: none;
            outline: none;
        }

    .search-btn {
        background: #3498db;
        border: none;
        color: white;
        padding: 5px 10px;
        cursor: pointer;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-avatar {
        border-radius: 50%;
        width: 100px;
    }

    section {
        background: #f9f9f9;
        padding: 15px;
        margin-bottom: 15px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    h3 {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #f0f0f0;
        padding: 10px;
        margin: -15px -15px 10px -15px;
        border-radius: 5px 5px 0 0;
        font-size: 16px;
    }

    .edit-btn {
        background: #3498db;
        color: white;
        padding: 5px 10px;
        border: none;
        cursor: pointer;
    }

    input, select {
        padding: 5px;
        margin: 5px 0;
        width: 100%;
        box-sizing: border-box;
    }

    .profile-completion {
        text-align: center;
        margin-top: 20px;
    }

    .progress-circle {
        width: 80px;
        height: 80px;
        background: #3498db;
        color: white;
        text-align: center;
        border-radius: 50%;
        line-height: 80px;
        font-weight: bold;
        margin: auto;
    }

    .progress-options span {
        display: inline-block;
        margin: 10px 5px;
        padding: 5px 10px;
        background: #ddd;
        border-radius: 15px;
        font-size: 14px;
    }
</style>

<div class="profile-content">

    <!-- Search Bar -->
    <div class="search-bar">
        <input type="text" placeholder="Search for employee">
        <button class="search-btn">🔍</button>
    </div>

    <!-- Profile Picture Header -->
    <div class="profile-header">
        <img src="https://via.placeholder.com/100" class="profile-avatar" alt="Profile">
        <h2>Profile Picture</h2>
    </div>

    <!-- Basic Information -->
    <section class="basic-info">
        <h3>Basic Information <button class="edit-btn">Edit</button></h3>
        <p><strong>Title:</strong> Mr <strong>Initials:</strong> A.B.C</p>
        <p><strong>First Name:</strong> Jhon <strong>Middle Name:</strong> Trever <strong>Last Name:</strong> Silva</p>
        <p><strong>Preferred Name:</strong> Trever Silva</p>
        <p><strong>DOB:</strong> 2000/03/27 <strong>Gender:</strong> Male</p>
        <p><strong>Marital Status:</strong> Single <strong>Blood Group:</strong> A+</p>
    </section>

    <!-- Identification Information -->
    <section class="identification-info">
        <h3>Identification Information <button class="edit-btn">Edit</button></h3>
        <p><strong>NIC Number:</strong> 123467900</p>
        <p>
            <label>Passport Number:</label>
            <input type="text">
            <label>Passport Expiry Date:</label>
            <input type="date">
        </p>
    </section>

    <!-- Contact Information -->
    <section class="contact-info">
        <h3>Contact Information <button class="edit-btn">Edit</button></h3>
        <p><label>Street 1:</label> <input type="text"></p>
        <p><label>Street 2:</label> <input type="text"></p>
        <p><label>City:</label> <input type="text"></p>
        <p><label>ZIP Code:</label> <input type="text"></p>
        <p><label>State:</label> <input type="text"></p>
        <p><label>Country:</label> <select><option>Choose...</option></select></p>
        <p><label>Mobile:</label> 077123456789</p>
        <p><label>Email:</label> trever@gmail.com</p>
    </section>

    <!-- Profile Completion Section -->
    <div class="profile-completion">
        <h3>Profile Completion</h3>
        <div class="progress-circle">Continue</div>
        <div class="progress-options">
            <span>Something</span>
            <span>Something</span>
            <span>Something</span>
        </div>
    </div>

</div>
<script>
        document.addEventListener("DOMContentLoaded", function () {
        const editButtons = document.querySelectorAll(".edit-btn");

        editButtons.forEach((btn) => {
            btn.addEventListener("click", function () {
                alert("Edit feature for this section is under development!");
            });
        });

        const searchInput = document.querySelector(".search-bar input");
        searchInput.addEventListener("keypress", function (e) {
            if (e.key === "Enter") {
                alert("Searching for: " + searchInput.value);
            }
        });
    });

</script>

